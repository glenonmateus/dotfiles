{
   "install_cmd": "sudo apt install -y",
    "install": [
        "i3-wm",
        "i3lock",
        "i3status",
        "feh",
        "vim-gtk",
        "cmake",
        "curl",
        "python-dev",
        "python3-dev",
        "python-pip",
        "parcellite",
	"ranger",
	"qpdfview",
	"rofi",
	"dunst",
	"mirage",
        "arandr",
        "xcompmgr",
        "flameshot",
        "git",
        "terminator",
        "dbus-x11",
        "libxslt1.1",
        "lightdm",
        "lightdm-gtk-greeter-settings",
        "pavucontrol",
        "zshrc",
        "numix-icon-theme-circle",
        "lxappearance"
    ], 
    
    "link": {
        "i3": "~/.config/i3",
        "vim": "~/.vim",
        "fonts": "~/.fonts",
	"zshrc": "~/.zshrc",
	"Xresources": "~/.Xresources",
	"terminator": "~/.config/terminator"
    },

    "commands": [
     	"rm -rf ~/.oh-my-zsh &&s sh -c '$(wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)'",
	"git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions",
	"git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting",
     	"git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf && ~/.fzf/install",
        "rmdir vim/bundle/Vundle.vim && git clone https://github.com/VundleVim/Vundle.vim.git -o vim/bundle/Vundle.vim",
        "vim +PluginInstall +qall && ~/.vim/bundle/youcompleteme/install.py",
	"git clone https://github.com/powerline/fonts.git ~/git/ && sh ~/git/fonts/install.sh",
        "fc-cache -f"
    ]
}
