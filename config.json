{
   "install_cmd": "sudo apt install -y",
    "install": [
        "i3-wm",
        "i3lock",
        "feh",
        "vim-gtk",
        "cmake",
        "curl",
        "python-dev",
        "python3-dev",
        "python-pip",
        "parcellite",
        "powerline",
        "powerline-gitstatus",
	"ranger",
	"qpdfview",
	"rofi",
	"dunst",
	"mirage",
        "arandr",
        "xcompmgr",
        "flameshot",
        "git",
        "tilix",
        "dbus-x11",
        "libxslt1.1",
        "gnome-themes-standard",
        "pavucontrol",
        "lxappearance"
    ], 
    
    "link": {
        "i3": "~/.config/i3",
        "vim": "~/.vim",
        "fonts": "~/.fonts",
	"bashrc": "~/.bashrc",
	"bash_aliases": "~/.bash_aliases",
	"bash_profile": "~/.bash_profile",
	"Xresources": "~/.Xresources"
    },

    "commands": [
        "git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf && ~/.fzf/install",
        "rmdir vim/bundle/Vundle.vim && git clone https://github.com/VundleVim/Vundle.vim.git -o vim/bundle/Vundle.vim",
        "vim +PluginInstall +qall && ~/.vim/bundle/youcompleteme/install.py",
	"git clone https://github.com/powerline/fonts.git ~/git/ && sh ~/git/fonts/install.sh",
        "fc-cache -f"
    ]
}
