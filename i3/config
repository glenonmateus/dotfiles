set $dmenu-bg-color #222222
set $dmenu-nf-color #c5c8c6

set $workspace1 "1"  
set $workspace2 "2"
set $workspace3 "3" 
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace0 "0"
set $image ~/Dropbox/Wallpapers/agua-ao-ar-livre-aurora-boreal-1819662.png
set $fonte pango:Hack Nerd Font Regular 9 

font $fonte
floating_modifier $mod

bindsym $mod+Return exec x-terminal-emulator -t Terminal
bindsym $mod+q kill
bindsym Print exec flameshot gui
bindsym $mod+Delete exec i3lock -ef -i $image
bindsym $mod+Shift+Delete exec i3lock -ef -i $image && systemctl suspend
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+Shift+a focus parent
bindsym $mod+f fullscreen
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+space floating toggle
bindsym --whole-window $mod+button1 floating toggle
bindsym --whole-window $mod+button2 kill
#bindsym $mod+d exec dmenu_run -b -nb "$inactive-bg-color" -nf "$inactive-text-color" -sb "$bg-color" -sf "$text-color" 
bindsym $mod+d exec dmenu_run -b -nb "#383838" -nf "#F7FDF2" -sb "#0087AF" -sf "#F7FDF2" 
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+Home exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+End exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+m exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86Sleep exec systemctl suspend

bindsym $mod+i exec x-terminal-emulator -e htop
bindsym $mod+p exec arandr
bindsym $mod+a exec pavucontrol
bindsym $mod+r exec thunar
bindsym $mod+Shift+w exec x-www-browser
bindsym $mod+Shift+v exec vlc

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2 
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace0
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace0

workspace $workspace1 output LVDS-1
workspace $workspace2 output HDMI-1

bindsym $mod+Shift+y resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+u resize grow height 10 px or 10 ppt
bindsym $mod+Shift+i resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+o resize grow width 10 px or 10 ppt

for_window [class="[.]*"] floating enable
for_window [class="Xfce4-terminal"] floating disable, border pixel 1
for_window [class="Google-chrome"] floating disable

set $mode_launcher [D]esligar [R]einiciar [S]uspender [H]ibernar
bindsym $mod+o mode "$mode_launcher"
mode "$mode_launcher" {
    bindsym D exec systemctl poweroff
    bindsym R exec systemctl reboot
    bindsym S exec systemctl suspend
    bindsym H exec systemctl hibernate
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

client.focused          $bg-color           $bg-color          $text-color           $indicator
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color  $indicator
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color  $indicator
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color           $indicator

bar {
        # status_command i3status -c ~/.config/i3/i3status.conf
        status_command python3 /usr/share/powerline/bindings/i3/powerline-i3.py
        position top
	separator_symbol "ï„„"
	colors {
	     background $bg-bar-color
	     statusline #C5C8C6 
	     separator #757575
	     #                  border             background         text
	     focused_workspace  $bg-color          $bg-color          $text-color
	     inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
	     urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

exec setxkbmap -model abnt2 -layout br -variant abnt2
exec xinput set-prop $(xinput list | grep Synaptics | cut -d '=' -f 2 | cut -d'[' -f 1) "libinput Tapping Enabled" 1
exec xinput set-prop $(xinput list | grep Synaptics | cut -d '=' -f 2 | cut -d'[' -f 1) "libinput Accel Speed" 0.5
exec dunst -conf ~/.config/i3/dunstrc
exec feh --bg-scale $image 
exec xcompmgr -c -f -n
