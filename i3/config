# i3 configuration file

# gaps inner 3
# gaps outer 3

set $mod Mod4
set $bg-color #3bc5db99
set $text-color #edf1f2
set $bg-bar-color #1d1f2199
set $inactive-bg-color #38383899
set $inactive-text-color #676E7D99
set $urgent-bg-color #E5393599
set $indicator #F7FDF2
set $default_windowsize 800 600
set $default_bordersize 2

client.focused          $bg-color           $bg-color          $text-color           $indicator
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color  $indicator
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color  $indicator
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color           $indicator

# default_border pixel $default_bordersize
for_window [class="Pomello"] floating enable, resize set 230 56, move position 1133 23
for_window [class="Arandr"] floating enable, resize set 348 249, move position center
for_window [title="VLSub*"] floating enable, resize set $default_windowsize, move position center
for_window [title="^htop$"] floating enable, resize set $default_windowsize, move position center
for_window [title="^ranger$"] floating enable, resize set $default_windowsize, move position center
for_window [window_role="GtkFileChooserDialog"] floating enable, resize set $default_windowsize, move position center
for_window [window_role="vlc-preferences"] floating enable, resize set $default_windowsize, move position center
for_window [class="X-terminal-emulator"] border pixel $default_bordersize

set $workspace1 "1"  
set $workspace2 "2"
set $workspace3 "3" 
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace0 "0"
set $image ~/Dropbox/Wallpapers/adam-kool-11868-unsplash.jpg
set $fonte pango:Droid Sans Mono for Powerline 9

font $fonte
floating_modifier $mod

# Basics Controll
bindsym $mod+q kill
bindsym $mod+Delete exec i3lock -ef -c "#000000"
bindsym $mod+Shift+Delete exec i3lock -ef -c "#000000" && systemctl suspend

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+h move left 10px
bindsym $mod+j move down 10px
bindsym $mod+k move up 10px
bindsym $mod+l move right 10px

bindsym $mod+t split t
bindsym $mod+Shift+a focus parent
bindsym $mod+f fullscreen
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+space floating toggle, resize set $default_windowsize, move position center
bindsym $mod+c move position center
bindsym $mod+m move position mouse
bindsym --whole-window $mod+button1 floating toggle
bindsym --whole-window $mod+button2 kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Media Controll
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/git/dotfiles/volume up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/git/dotfiles/volume down
bindsym XF86AudioMute exec --no-startup-id ~/git/dotfiles/volume mute
bindsym $mod+Prior exec --no-startup-id ~/git/dotfiles/volume up
bindsym $mod+Next exec --no-startup-id ~/git/dotfiles/volume down
bindsym $mod+End exec --no-startup-id  ~/git/dotfiles/volume mute
bindsym $mod+a exec pavucontrol

# Backlight Controll
bindsym XF86MonBrightnessUp exec xbacklight -inc 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 5

# Run Application Binds
bindsym $mod+Return exec x-terminal-emulator
bindsym $mod+i exec x-terminal-emulator -T htop -e htop
bindsym $mod+p exec arandr
bindsym $mod+r exec x-terminal-emulator -T ranger -e ranger -r ~/.config/ranger
bindsym $mod+Shift+w exec x-www-browser
bindsym $mod+Shift+v exec vlc
bindsym Print exec flameshot gui
bindsym $mod+d exec rofi -show run

# Workspaces Controll
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2 
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace0
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace0
workspace $workspace1 output LVDS-1
workspace $workspace2 output HDMI-1

# Resize Controll
bindsym $mod+Shift+y resize shrink width 10 px
bindsym $mod+Shift+o resize grow width 10 px
bindsym $mod+Shift+i resize grow height 10 px
bindsym $mod+Shift+u resize shrink height 10 px

set $mode_launcher [D]esligar [R]einiciar [S]uspender [H]ibernar
bindsym $mod+o mode "$mode_launcher"
mode "$mode_launcher" {
    bindsym D exec systemctl poweroff
    bindsym R exec systemctl reboot
    bindsym S exec systemctl suspend
    bindsym H exec systemctl hibernate
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bar {
        status_command py3status -c ~/.config/i3/i3status.conf
	# i3bar_command i3bar -t
	tray_output none
	position top
	colors {
	     background $bg-bar-color
	     statusline #C5C8C699
	     separator #75757599
	     #                  border             background         text
	     focused_workspace  $bg-color          $bg-color          $text-color
	     inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
	     urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
             binding_mode       $bg-color          $bg-color          $text-color
	}
}

# Setup Input
exec setxkbmap -model abnt2 -layout br -variant abnt2
exec xinput set-prop $(xinput list | grep Synaptics | cut -d '=' -f 2 | cut -d'[' -f 1) "libinput Tapping Enabled" 1
exec xinput set-prop $(xinput list | grep Synaptics | cut -d '=' -f 2 | cut -d'[' -f 1) "libinput Accel Speed" 0.5

# Autostart
exec dunst -conf ~/.config/i3/dunstrc
exec feh --bg-scale $image 
exec xcompmgr -c -f -n
exec xrdb ~/.Xresources
exec --no-startup-id dropbox start
exec --no-startup-id megasync 
exec --no-startup-id parcellite
exec --no-startup-id flameshot
exec --no-startup-id xrandr --output LVDS-1 --primary --right-of HDMI-1
